{
  "name": "rra_bot",
  "version": "1.0.0",
  "description": "@rra_bot",
  "main": "./dist/main.js",
  "scripts": {
    "build": "webpack",
    "prestart": "npm run build",
    "start": "pm2 start ./app.json",
    "stop": "pm2 stop ./app.json",
    "dev": "node ./dist/main.js",
    "pretest": "npm run build",
    "test": "jest",
    "coverage": "jest --coverage",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls",
    "lint": "tslint -p ./tsconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://sapphiredev@github.com/sapphiredev/rra_bot.git"
  },
  "author": "sapphire",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sapphiredev/rra_bot/issues"
  },
  "homepage": "https://github.com/sapphiredev/rra_bot#readme",
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "encoding": "^0.1.12",
    "knex": "^0.15.2",
    "request": "^2.88.0",
    "sqlite3": "^4.0.2",
    "twit": "^2.2.11"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.9",
    "@types/jest": "^23.3.5",
    "@types/knex": "^0.14.26",
    "@types/node-fetch": "^2.1.2",
    "@types/twit": "^2.2.19",
    "@types/twitter-text": "^2.0.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "jest": "^23.6.0",
    "list-loader": "^1.0.9",
    "node-fetch": "^2.2.0",
    "ts-jest": "^23.10.4",
    "ts-loader": "^5.2.1",
    "tslint": "^5.11.0",
    "twitter-text": "^2.0.5",
    "typescript": "^3.1.1",
    "webpack": "^4.20.2",
    "webpack-command": "^0.4.1",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "testMatch": [
      "**/?(*.)test.ts?(x)"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.txt$": "<rootDir>/src/list.mock.ts"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx",
      "json"
    ]
  }
}
